#include <stdio.h>
#include <locale.h>

int main(){
    char *locale = setlocale(LC_ALL, "");
    float a = 0;
    float b = 0;
    printf("Введите сторону a: ");
    scanf("%e", &a);
    printf("Введите сторону b: ");
    scanf("%e", &b);
    float s = a*b;
    float p = 2*(a+b);
    printf("Площадь = %g \n", s);
    printf("Периметр = %g \n", p);
    return 0;
}
